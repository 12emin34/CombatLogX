<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<groupId>com.SirBlobman</groupId>
		<artifactId>combatlogx-1.13-parent</artifactId>
		<version>9.0.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
    
    <properties>
        <test.version>8</test.version>
    </properties>

	<artifactId>CombatLogX-Builder</artifactId>
	<name>CombatLogX 1.13+ Builder</name>
	<description>ZIP and JAR files for CombatLogX</description>

	<build>
		<plugins>
			<plugin>
				<inherited>false</inherited>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<mkdir dir="${project.basedir}/CombatLogX/expansions"></mkdir>

								<!-- Main Jar -->
								<copy overwrite="true"
									file="${project.basedir}/../main/target/CombatLogX-1.13-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX.jar"></copy>

								<!-- Expansion Jars -->
								<copy overwrite="true"
									file="${project.basedir}/../expansion/CheatPrevention/target/exp-CheatPrevention-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/Cheat Prevention.jar"></copy>
									
								<copy overwrite="true"
									file="${project.basedir}/../expansion/CompatCitizens/target/exp-CompatCitizens-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/Citizens Compatibility.jar"></copy>
									
								<copy overwrite="true"
									file="${project.basedir}/../expansion/CompatParties/target/exp-CompatParties-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/Parties Compatibility.jar"></copy>
									
								<copy overwrite="true"
									file="${project.basedir}/../expansion/CompatPlaceholders/target/exp-CompatPlaceholders-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/Placeholders Compatibility.jar"></copy>
									
								<copy overwrite="true"
									file="${project.basedir}/../expansion/CompatWorldGuard/target/exp-CompatWorldGuard-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/WorldGuard Compatibility.jar"></copy>
									
								<copy overwrite="true"
									file="${project.basedir}/../expansion/NotCombatLogX/target/exp-NotCombatLogX-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/NotCombatLogX.jar"></copy>
									
								<copy overwrite="true"
									file="${project.basedir}/../expansion/Notifier/target/exp-Notifier-${project.version}.jar"
									tofile="${project.basedir}/CombatLogX/expansions/Notifier.jar"></copy>	

								<!-- Zip File -->
								<zip destfile="${project.basedir}/CombatLogX-${test.version}.zip"
									basedir="${project.basedir}"
									excludesfile="${project.basedir}/exclusion.txt"></zip>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>