<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	<parent>
		<groupId>com.SirBlobman</groupId>
		<artifactId>combatlogx-1.13-parent</artifactId>
		<version>9.0.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<properties>
		<beta.version>14</beta.version>
	</properties>

	<artifactId>combatlogx-1.13-builder</artifactId>
	<name>CombatLogX 1.13+ Builder</name>
	<description>Creates the final zip for CombatLogX</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<target>
								<!-- Copy CombatLogX jar -->
								<copy
									file="${project.basedir}/../main/target/CombatLogX-1.13-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX.jar"></copy>

								<!-- Copy Compatibility jars -->
								<copy
									file="${project.basedir}/../expansion/CompatCitizens/target/exp-CompatCitizens-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Citizens Compatibility.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/CompatFactions/target/exp-CompatFactions-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Factions Compatibility.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/CompatParties/target/exp-CompatParties-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Parties Compatbility.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/CompatPlaceholders/target/exp-CompatPlaceholders-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Placeholder Compatibility.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/CompatWorldGuard/target/exp-CompatWorldGuard-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/WorldGuard Compatibility.jar"></copy>

								<!-- Copy Expansion jars -->
								<copy
									file="${project.basedir}/../expansion/CheatPrevention/target/exp-CheatPrevention-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Cheat Prevention.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/NotCombatLogX/target/exp-NotCombatLogX-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/NotCombatLogX.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/Notifier/target/exp-Notifier-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Notifier.jar"></copy>
								<copy
									file="${project.basedir}/../expansion/Rewards/target/exp-Rewards-${project.version}.jar"
									tofile="${project.basedir}/target/CombatLogX/expansions/Rewards.jar"></copy>

								<!-- Create Final ZIP -->
								<zip basedir="${project.basedir}/target" encoding="UTF-8"
									includes="**.jar, **/**.jar"
									destfile="${project.basedir}/target/CombatLogX (Beta ${beta.version}).zip"></zip>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>