<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>
    
    <parent>
        <groupId>com.SirBlobman.combatlogx</groupId>
        <artifactId>CombatLogX-parent</artifactId>
        <version>10.0.0.0-SNAPSHOT</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>
    
    <groupId>com.SirBlobman.combatlogx.expansions</groupId>
    <artifactId>SkyBlockCompatibility</artifactId>
    
    <name>SkyBlock Compatibility Expansion</name>
    <description>An expansion that prevents island team members from tagging each other.</description>
    
    <repositories>
        <!-- Spigot API Repository -->
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
        
        <!-- CodeMC Public -->
        <repository>
            <id>codemc-public</id>
            <url>https://repo.codemc.org/repository/maven-public/</url>
        </repository>
        
        <!-- Songoda Public -->
        <repository>
            <id>songoda-public</id>
            <url>https://repo.songoda.com/artifactory/public/</url>
        </repository>
        
        <!-- Tastybento Bintray -->
        <repository>
            <id>tastybento-bintray</id>
            <url>http://dl.bintray.com/tastybento/maven-repo/</url>
        </repository>
        
        <!-- Ultimate SkyBlock Repository -->
        <repository>
            <id>ultimate-skyblock</id>
            <url>https://www.uskyblock.ovh/maven/uskyblock/</url>
        </repository>
        
        <!-- Songoda Private -->
        <!-- Disable downloading from this repository -->
        <repository>
            <id>private</id>
            <url>https://repo.songoda.com/artifactory/private/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <!-- Spigot API -->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- CombatLogX API -->
        <dependency>
            <groupId>com.SirBlobman.combatlogx</groupId>
            <artifactId>CombatLogX-API</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- BentoBox -->
        <dependency>
            <groupId>world.bentobox</groupId>
            <artifactId>bentobox</artifactId>
            <version>1.12.0</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- BSkyBlock -->
        <dependency>
            <groupId>world.bentobox</groupId>
            <artifactId>bskyblock</artifactId>
            <version>1.11.2-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- ASkyBlock -->
        <dependency>
            <groupId>com.wasteofplastic</groupId>
            <artifactId>askyblock</artifactId>
            <version>3.0.9.4</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- uSkyBlock API -->
        <dependency>
            <groupId>com.github.rlf</groupId>
            <artifactId>uSkyBlock-API</artifactId>
            <version>2.8.3</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- FabledSkyBlock -->
        <dependency>
            <groupId>com.songoda</groupId>
            <artifactId>fabledskyblock</artifactId>
            <version>2.2.1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
