<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    
    <parent>
        <groupId>com.SirBlobman.combatlogx</groupId>
        <artifactId>CombatLogX-parent</artifactId>
        <version>10.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    
    <name>CombatLogX Builder</name>
    <artifactId>CombatLogX-builder</artifactId>
    <description>This module is used to create the final CombatLogX.zip file</description>
    
    <properties>
        <build.dir>${project.basedir}/build</build.dir>
        <build.expansion.dir>${build.dir}/CombatLogX/expansions</build.expansion.dir>
        
        <parent.dir>${project.basedir}/..</parent.dir>
        <plugin.target.dir>${parent.dir}/plugin/target</plugin.target.dir>
        <expansion.dir>${parent.dir}/expansion</expansion.dir>
        <expansion.compatibility.dir>${expansion.dir}/compatibility</expansion.compatibility.dir>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <!-- Delete Previous Build Directory -->
                                <delete dir="${build.dir}"></delete>
                                
                                <!-- Re-Create Build Directory -->
                                <mkdir dir="${build.dir}"></mkdir>
                                
                                <!-- Copy Plugin JAR File -->
                                <copy file="${plugin.target.dir}/CombatLogX-Plugin-${project.version}-shaded.jar" tofile="${build.dir}/CombatLogX.jar"></copy>
                                
                                <!-- Copy Main Expansion JAR Files -->
                                <copy file="${expansion.dir}/Cheat Prevention/target/CheatPrevention-${project.version}.jar" tofile="${build.expansion.dir}/Cheat Prevention.jar"></copy>
                                <copy file="${expansion.dir}/Damage Tagger/target/DamageTagger-${project.version}.jar" tofile="${build.expansion.dir}/Damage Tagger.jar"></copy>
                                <copy file="${expansion.dir}/Newbie Helper/target/NewbieHelper-${project.version}.jar" tofile="${build.expansion.dir}/Newbie Helper.jar"></copy>
                                <copy file="${expansion.dir}/Notifier/target/Notifier-${project.version}.jar" tofile="${build.expansion.dir}/Notifier.jar"></copy>
                                <copy file="${expansion.dir}/Rewards/target/Rewards-${project.version}.jar" tofile="${build.expansion.dir}/Rewards.jar"></copy>
                                
                                <!-- Copy Compatibility Expansion JAR Files -->
                                <copy file="${expansion.compatibility.dir}/Citizens/target/CitizensCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/Citizens Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/PlaceholderAPI/target/PlaceholderAPICompatibility-${project.version}.jar" tofile="${build.expansion.dir}/PlaceholderAPI Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/MVdWPlaceholderAPI/target/MVdWPlaceholderAPICompatibility-${project.version}.jar" tofile="${build.expansion.dir}/MVdWPlaceholderAPI Compatibility.jar"></copy>
                                
                                <!-- Copy Region Compatibility Expansion JAR Files -->
                                <copy file="${expansion.compatibility.dir}/Factions/target/FactionsCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/Factions Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/GriefPrevention/target/GriefPreventionCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/GriefPrevention Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/Lands/target/LandsCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/Lands Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/RedProtect/target/RedProtectCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/RedProtect Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/Residence/target/ResidenceCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/Residence Compatibility.jar"></copy>
                                <copy file="${expansion.compatibility.dir}/WorldGuard/target/WorldGuardCompatibility-${project.version}.jar" tofile="${build.expansion.dir}/WorldGuard Compatibility.jar"></copy>
                                
                                <!-- Create Final ZIP File -->
                                <zip basedir="${build.dir}" destfile="${build.dir}/CombatLogX-${combatlogx.version}.zip"></zip>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>